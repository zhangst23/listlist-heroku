<h1>Lists Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @lists.each do |list| %>
    <li>
      <h3>
        <%= link_to list.title, controller: "lists", action: "show", id: list._id %>
      </h3>
    </li>
  <% end %>
</ul>